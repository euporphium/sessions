{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web",
  "projectType": "application",
  "tags": ["type:next", "type:react"],
  "targets": {
    "docker-build": {
      "command": "docker build -f apps/web/Dockerfile . -t web"
    },
    "drizzle-push": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/web",
        "command": "dotenvx run -f .env.local -- drizzle-kit push"
      }
    },
    "drizzle-studio": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/web",
        "command": "dotenvx run -f .env.local -- drizzle-kit studio"
      }
    }
  }
}
